{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Monthly Flight Delays vs Rainfall â€” Melbourne vs Sydney",
  "data": {
    "url": "https://divyanshsharma12.github.io/FIT3179-FlightDelaysA2/mel_syd_monthly.csv",
    "format": { "type": "csv", "parse": { "month": "date:%Y-%m" } }
  },

  "params": [
    {
      "name": "CitySelect",
      "bind": { "input": "select", "options": [null, "Melbourne", "Sydney"], "labels": ["Both", "Melbourne", "Sydney"], "name": "City: " },
      "value": null
    }
  ],

  "transform": [
    { "filter": "CitySelect == null || datum.city == CitySelect" },
    { "calculate": "datum.delay_rate", "as": "DelayPct" }
  ],

  "resolve": { "scale": { "y": "independent" } },

  
  "layer": [
    {
      "mark": { "type": "line", "point": true },
      "encoding": {
        "x": { "field": "month", "type": "temporal", "title": "Month" },
        "y": {
          "field": "DelayPct", "type": "quantitative",
          "title": "Delay (%)", "scale": { "domain": [0, 60] }, "axis": { "format": ".1f", "orient": "left" }
        },
        "color": { "field": "city", "type": "nominal", "title": "City" },
        "tooltip": [
          { "field": "city", "type": "nominal" },
          { "field": "month", "type": "temporal", "timeUnit": "yearmonth", "title": "Month" },
          { "field": "DelayPct", "type": "quantitative", "format": ".1f", "title": "Delay (%)" },
          { "field": "rain_mm", "type": "quantitative", "title": "Rainfall (mm)" }
        ]
      }
    },
    {
      "mark": { "type": "area", "opacity": 0.2 },
      "encoding": {
        "x": { "field": "month", "type": "temporal", "title": "Month" },
        "y": {
          "field": "rain_mm", "type": "quantitative",
          "title": "Rainfall (mm)", "axis": { "orient": "right" }
        },
        "color": { "field": "city", "type": "nominal", "legend": null }
      }
    }
  ],

  
  "width": 900,
  "height": 360,
  "config": { "axis": { "grid": true } }
}
